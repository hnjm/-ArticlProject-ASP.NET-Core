@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "نسيان كلمة السر";
}

<h1 class="container" style="font-family: Cairo;direction:rtl" >@ViewData["Title"]</h1>
<h4 class="container" style="font-family: Cairo;direction:rtl">ادخل الايميل</h4>
<hr />
<div class="row container" style="font-family: Cairo;direction:rtl">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">ارسال</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
